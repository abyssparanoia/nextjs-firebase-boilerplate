{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "lib": ["dom", "es2017"],
    "target": "esnext",
    "sourceMap": true,
    "outDir": "./dist",
    "jsx": "preserve",
    "baseUrl": "./",
    "incremental": true,
    "types": ["node","react"],
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "exclude": ["node_modules", "dist"]
}
