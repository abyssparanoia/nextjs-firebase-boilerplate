{
  "compilerOptions": {
    "module": "esnext",
    "removeComments": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "jsx": "preserve",
    "baseUrl": "./",
    "incremental": true,
    "strict": true,
    "types": [
      "node"
    ],
    "noEmit": true,
    "allowJs": false,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
