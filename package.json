{
  "name": "nextjs-boilerplate",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build": "lerna run build --include-dependencies",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "clean": "lerna run clean && lerna clean --y"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "concurrently": "^4.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^3.1.0",
    "lerna": "^3.20.2",
    "lint-staged": "^9.5.0",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.1",
    "ts-node": "8.1.0",
    "typescript": "^3.7.4",
    "wait-on": "^3.2.0"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{.ts,tsx}": [
      "yarn lint",
      "git add"
    ]
  }
}
