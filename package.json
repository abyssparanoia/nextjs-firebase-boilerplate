{
  "name": "nextjs-boilerplate",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "concurrently 'yarn workspace @abyssparanoia/backend start:dev' 'yarn workspace @abyssparanoia/web start:dev' ",
    "build": "lerna run build --include-dependencies",
    "lint": "eslint --fix -c ./.eslintrc.json './packages/**/*.{ts,tsx}'",
    "test": "lerna run test",
    "clean": "lerna run clean && lerna clean --y"
  },
  "devDependencies": {
    "@types/jest": "25.1.3",
    "@types/supertest": "2.0.8",
    "@typescript-eslint/eslint-plugin": "2.20.0",
    "@typescript-eslint/parser": "2.20.0",
    "concurrently": "5.1.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-react": "7.18.3",
    "eslint-plugin-react-hooks": "2.4.0",
    "husky": "4.2.3",
    "jest": "25.1.0",
    "lerna": "3.20.2",
    "lint-staged": "10.0.7",
    "nodemon": "2.0.2",
    "npm-run-all": "4.1.5",
    "prettier": "1.19.1",
    "rimraf": "3.0.2",
    "ts-jest": "25.2.0",
    "ts-node": "8.6.2",
    "tsconfig-paths": "3.9.0",
    "typescript": "3.7.5",
    "wait-on": "4.0.0"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{.ts,tsx}": [
      "yarn lint",
      "git add"
    ]
  }
}
